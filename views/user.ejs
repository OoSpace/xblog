<% include common/header.ejs %>
<% posts.forEach(function(post){ %>
    <p>
        <h2>
            <a href="/blog/<%= encodeURIComponent(post.username) %>/<%= encodeURIComponent(post.time.minute) %>/<%= encodeURIComponent(post.title) %>"><%= post.title %></a>
        </h2>
        <a href="/blog/<%= encodeURIComponent(post.username) %>">
    		<img src="<%= post.head %>" class="r_head" />
    	</a>
    </p>
    <p class="info">
      作者：<a href="/blog/<%= encodeURIComponent(post.username) %>"><%= post.username %></a>
      日期：<%= post.time.minute %> |
      标签：
  	<% post.tags.forEach(function(tag){ %>
  		<% if(tag){ %>
  			<a class="tag" href="/tags/<%= encodeURIComponent(tag) %>"><%= tag %></a>
  		<% } %>
  	<% }) %>
    <% if (post.reprint_info.reprint_from) { %>
	  <br><a href="/blog/<%= encodeURIComponent(post.reprint_info.reprint_from.username) %>/<%= encodeURIComponent(post.reprint_info.reprint_from.day) %>/<%= encodeURIComponent(post.reprint_info.reprint_from.title) %>">原文链接</a>
	<% } %>
    </p>
    <p><%- post.post %></p>
    <p class="info">
        阅读: <%= post.pv %> |
        评论：
        <% if(post.comments) { %>
            <%= post.comments.length %>
        <% } %>             |
        转载：
        <% if (post.reprint_info.reprint_to) { %>
            <%= post.reprint_info.reprint_to.length %>
        <% } else { %>
            <%= 0 %>
        <% } %>
    </p>
<% }) %>
<% include page.ejs %>
<% include common/footer.ejs %>
