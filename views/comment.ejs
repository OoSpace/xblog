<% if(post.comments){ %>
    <% post.comments.forEach(function(comment, index){ %>
       <p>
          <a href="<%= comment.website %>"><%= comment.username%></a>
          <span class="info">回复于<%= comment.time %></span>
       </p>
       <p><%- comment.content %></p>
    <% }) %>
<% } %>
<form method="post" action="/blog/<%= post.username %>/<%= post.time.day %>/<%= post.title %>">
   <% if(user) { %>
   姓名： <input type="text" name="username" value="<%= user.username %>" /><br />
   邮箱： <input type="text" name="email" value="<%= user.email %>" /><br />
   网址： <input type="text" name="website" value="/blog/<%= user.username %>" /><br />
   <% } else{ %>
   姓名： <input type="text" name="username" /><br />
   邮箱： <input type="text" name="email" /><br />
   网址： <input type="text" name="website" value="http://" /><br />
   <% } %>
   <textarea name="content" rows="5" cols="80"></textarea><br />
   <input type="submit" value="留言" />
</form>
