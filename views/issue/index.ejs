<% include ../common/header.ejs %>
<% posts.forEach(function(post){  %>
<p>
	<h2>
		<a href="/blog/<%= post.username %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a>
	</h2>
	<a href="/blog/<%= post.username %>">
		<img src="<%= post.head %>" class="r_head" />
	</a>
</p>
<p class="info">
	作者：<a href="blog/<%= post.username %>"><%= post.username %></a> |
	日期：<%= post.time.minute %> |
	标签：
	<% post.tags.forEach(function(tag){ %>
		<% if(tag){ %>
			<a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
		<% } %>
	<% }) %>
	<% if (post.reprint_info.reprint_from) { %>
	  <br><a href="/blog/<%= post.reprint_info.reprint_from.username %>/<%= post.reprint_info.reprint_from.day %>/<%= post.reprint_info.reprint_from.title %>">原文链接</a>
	<% } %>
</p>
<%- post.post %>
<p class="info">
	阅读：<%= post.pv %> |
	评论：
	<% if(post.comments) { %>
		<%= post.comments.length %>
	<% } %>             |
	转载：
    <% if (post.reprint_info.reprint_to) { %>
        <%= post.reprint_info.reprint_to.length %>
    <% } else { %>
        <%= 0 %>
    <% } %>
</p>
<% }) %>
</article>
<% include ../page.ejs %>
<% include ../common/footer.ejs %>
